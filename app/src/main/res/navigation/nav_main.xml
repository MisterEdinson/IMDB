<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.imdb.ui.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.imdb.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_descriptFragment"
            app:destination="@id/descriptFragment" />
        <action
            android:id="@+id/action_homeFragment_to_favoriteFragment"
            app:destination="@id/favoriteFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.imdb.ui.favorite.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite" >
        <action
            android:id="@+id/action_favoriteFragment_to_descriptFragment"
            app:destination="@id/descriptFragment" />
        <action
            android:id="@+id/action_favoriteFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/descriptFragment"
        android:name="com.example.imdb.ui.description.DescriptFragment"
        android:label="fragment_descript"
        tools:layout="@layout/fragment_descript" >
        <action
            android:id="@+id/action_descriptFragment_to_favoriteFragment"
            app:destination="@id/favoriteFragment" />
        <action
            android:id="@+id/action_descriptFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_descriptFragment_to_descFactFragment2"
            app:destination="@id/descFactFragment2" />
        <action
            android:id="@+id/action_descriptFragment_to_descSimilarFragment2"
            app:destination="@id/descSimilarFragment2" />
        <action
            android:id="@+id/action_descriptFragment_to_descTrailerFragment2"
            app:destination="@id/descTrailerFragment2" />
    </fragment>
    <fragment
        android:id="@+id/descFactFragment2"
        android:name="com.example.imdb.ui.description.tabs.DescFactFragment"
        android:label="fragment_desc_fact"
        tools:layout="@layout/fragment_desc_fact" />
    <fragment
        android:id="@+id/descSimilarFragment2"
        android:name="com.example.imdb.ui.description.tabs.DescSimilarFragment"
        android:label="fragment_desc_similar"
        tools:layout="@layout/fragment_desc_similar" />
    <fragment
        android:id="@+id/descTrailerFragment2"
        android:name="com.example.imdb.ui.description.tabs.DescTrailerFragment"
        android:label="fragment_desc_trailer"
        tools:layout="@layout/fragment_desc_trailer" />
</navigation>